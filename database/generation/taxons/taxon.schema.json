{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://ancgis.dev.net/taxon.schema.json",
  "title": "Taxon",
  "description": "A taxon from AncDB",
  "type": "object",
  "properties": {
    "_id": {
      "description": "The unique identifier for a taxon (cd_nom)",
      "type": "integer",
      "minimum": 0
    },
    "isValid": {
      "description": "Indicates if the taxon is fully informed",
      "type": "boolean"
    },
    "page": {
      "description": "Indicates the taxon's page number into the 'Delachaux guide' (ISBN-13: 978-2603024676)",
      "type": "integer",
      "exclusiveMinimum": 0
    },
    "rank": {
      "description": "The taxon's rank (TAXREF v12 rank)",
      "type": "string",
      "enum": ["GN", "ES"]
    },
    "family": {
      "description": "The taxon's family name",
      "type": "object",
      "required": [ "latin", "fr" ],
      "properties": {
        "latin": {
          "description": "The taxon's latin family name",
          "type": "string"
        },
        "fr": {
          "description": "The taxon's french vernacular family name",
          "type": "string"
        }
      }
    },
    "name": {
      "description": "The taxon's name",
      "type": "object",
      "required": [ "latin", "fr" ],
      "properties": {
        "latin": {
          "description": "The taxon's latin name",
          "type": "string"
        },
        "fr": {
          "description": "The taxon's french vernacular name",
          "type": "string"
        }
      }
    },
    "periods": {
      "description": "The taxon's periods",
      "type": "object",
      "required": [ "blooming", "honeydew" ],
      "properties": {
        "blooming": {
          "description": "The taxon's blooming periods (Guerriat's phenoseasons)",
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["T1", "PV1", "PV2", "T2", "V1", "V2", "V3", "V4", "T3", "E1", "E2", "T4", "EA"]
          },
          "minItems": 0,
          "uniqueItems": true
        },
        "honeydew": {
          "description": "The taxon's honeydew periods (Guerriat's phenoseasons)",
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["T1", "PV1", "PV2", "T2", "V1", "V2", "V3", "V4", "T3", "E1", "E2", "T4", "EA"]
          },
          "minItems": 0,
          "uniqueItems": true
        }
      }
    },
    "potentials": {
      "description": "The taxon's potentials",
      "type": "object",
      "required": [ "nectar", "pollen", "honeydew", "propolis" ],
      "properties": {
        "nectar": {
          "description": "The taxon's nectar potential",
          "oneOf": [
            {
              "type": "integer",
              "minimum": 0,
              "maximum": 3
            },{
              "type": "array",
              "items": {
                "type": "integer",
                "minimum": 0,
                "maximum": 3
              },
              "minItems": 2,
              "maxItems": 2
            }
          ]
        },
        "pollen": {
          "description": "The taxon's pollen potential",
          "oneOf": [
            {
              "type": "integer",
              "minimum": 0,
              "maximum": 3
            },{
              "type": "array",
              "items": {
                "type": "integer",
                "minimum": 0,
                "maximum": 3
              },
              "minItems": 2,
              "maxItems": 2
            }
          ]
        },
        "honeydew": {
          "description": "The taxon's honeydew potential",
          "oneOf": [
            {
              "type": "integer",
              "minimum": 0,
              "maximum": 3
            },{
              "type": "array",
              "items": {
                "type": "integer",
                "minimum": 0,
                "maximum": 3
              },
              "minItems": 2,
              "maxItems": 2
            }
          ]
        },
        "propolis": {
          "description": "The taxon's propolis potential (true or false)",
          "oneOf": [
            {
              "type": "integer",
              "minimum": 0,
              "maximum": 1
            },{
              "type": "array",
              "items": {
                "type": "integer",
                "minimum": 0,
                "maximum": 1
              },
              "minItems": 2,
              "maxItems": 2
            }
          ]
        }
      }
    },
    "colors": {
      "description": "The taxon's colors",
      "type": "object",
      "required": [ "hex", "fr" ],
      "properties": {
        "hex": {
          "description": "The taxon's hexadecimal colors",
          "type": "object",
          "oneOf": [{
            "properties": {
                "flower": {
                  "description": "The taxon's flower color",
                  "type": "string",
                  "oneOf": [
                    {"const": ""},
                    {"pattern": "^#[0-9A-F]{6}$"}
                  ]
                },
                "pollen": {
                  "description": "The taxon's pollen color",
                  "type": "string",
                  "oneOf": [
                    {"const": ""},
                    {"pattern": "^#[0-9A-F]{6}$"}
                  ]
                },
                "liquidHoney": {
                  "description": "The taxon's liquid honey color",
                  "type": "string",
                  "oneOf": [
                    {"const": ""},
                    {"pattern": "^#[0-9A-F]{6}$"}
                  ]
                },
                "solidHoney": {
                  "description": "The taxon's solid honey color",
                  "type": "string",
                  "oneOf": [
                    {"const": ""},
                    {"pattern": "^#[0-9A-F]{6}$"}
                  ]
                }
              },
              "required": [ "flower", "pollen", "liquidHoney", "solidHoney" ]
            },{
              "properties": {
                "cone": {
                  "description": "The taxon's cone color",
                  "type": "string",
                  "oneOf": [
                    {"const": ""},
                    {"pattern": "^#[0-9A-F]{6}$"}
                  ]
                },
                "pollen": {
                  "description": "The taxon's pollen color",
                  "type": "string",
                  "oneOf": [
                    {"const": ""},
                    {"pattern": "^#[0-9A-F]{6}$"}
                  ]
                },
                "liquidHoney": {
                  "description": "The taxon's liquid honey color",
                  "type": "string",
                  "oneOf": [
                    {"const": ""},
                    {"pattern": "^#[0-9A-F]{6}$"}
                  ]
                },
                "solidHoney": {
                  "description": "The taxon's solid honey color",
                  "type": "string",
                  "oneOf": [
                    {"const": ""},
                    {"pattern": "^#[0-9A-F]{6}$"}
                  ]
                }
              },
              "required": [ "cone", "pollen", "liquidHoney", "solidHoney" ]
            }
          ]
        },
        "fr": {
          "description": "The taxon's french colors",
          "type": "object",
          "oneOf": [{
            "properties": {
                "flower": {
                  "description": "The taxon's flower color",
                  "type": "string"
                },
                "pollen": {
                  "description": "The taxon's pollen color",
                  "type": "string"
                },
                "liquidHoney": {
                  "description": "The taxon's liquid honey color",
                  "type": "string"
                },
                "solidHoney": {
                  "description": "The taxon's solid honey color",
                  "type": "string"
                }
              },
              "required": [ "flower", "pollen", "liquidHoney", "solidHoney" ]
            },{
              "properties": {
                "cone": {
                  "description": "The taxon's cone color",
                  "type": "string"
                },
                "pollen": {
                  "description": "The taxon's pollen color",
                  "type": "string"
                },
                "liquidHoney": {
                  "description": "The taxon's liquid honey color",
                  "type": "string"
                },
                "solidHoney": {
                  "description": "The taxon's solid honey color",
                  "type": "string"
                }
              },
              "required": [ "cone", "pollen", "liquidHoney", "solidHoney" ]
            }
          ]
        }
      }
    },
    "urls": {
      "description": "The taxon's urls",
      "type": "object",
      "required": [ "fr" ],
      "properties": {
        "fr": {
          "description": "The taxon's french urls",
          "type": "object",
          "required": [ "wikipedia", "telabotanica", "smartflore", "inpn" ],
          "properties": {
            "wikipedia": {
              "description": "The taxon's wikipedia url",
              "type": "string"
            },
            "telabotanica": {
              "description": "The taxon's telabotanica url",
              "type": "string"
            },
            "smartflore": {
              "description": "The taxon's smartflore url",
              "type": "string"
            },
            "inpn": {
              "description": "The taxon's inpn url",
              "type": "string"
            }
          }
        }
      }
    },
    "ecology": {
      "description": "The taxon's ecology",
      "type": "object",
      "required": [ "lifeCycle", "stratification", "climate", "soil" ],
      "properties": {
        "lifeCycle": {
          "description": "The taxon's life cycle",
          "type": "array",
          "items": {
            "type": "string",
            "oneOf": [
              {"const": "A", "description": "Annual"},
              {"const": "B", "description": "Biannual"},
              {"const": "M", "description": "Mutliannual"},
              {"const": "P", "description": "Perennial"}
            ]
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "stratification": {
          "description": "The taxon's stratification",
          "type": "array",
          "items": {
            "type": "string",
            "oneOf": [
              {"const": "H", "description": "Herbaceous"},
              {"const": "S", "description": "Shrub"},
              {"const": "T", "description": "Tree"}
            ]
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "climate": {
          "description": "The taxon's ecological climate",
          "type": "object",
          "required": [ "brightness", "moisture", "temperature", "continentality" ],
          "properties": {
            "brightness": {
              "description": "The taxon's brightness need",
              "oneOf": [{
                "type": "integer",
                "minimum": 0,
                "maximum": 100
              },{
                "type": "array",
                "items": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 100
                },
                "minItems": 2,
                "maxItems": 2,
                "uniqueItems": true
              }]
            },
            "moisture": {
              "description": "The taxon's moisture need",
              "oneOf": [{
                "type": "integer",
                "minimum": 0,
                "maximum": 100
              },{
                "type": "array",
                "items": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 100
                },
                "minItems": 2,
                "maxItems": 2,
                "uniqueItems": true
              }]
            },
            "temperature": {
              "description": "The taxon's temperature need",
              "oneOf": [{
                "type": "integer",
                "minimum": 0,
                "maximum": 100
              },{
                "type": "array",
                "items": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 100
                },
                "minItems": 2,
                "maxItems": 2,
                "uniqueItems": true
              }]
            },
            "continentality": {
              "description": "The taxon's continentality need",
              "oneOf": [{
                "type": "integer",
                "minimum": 0,
                "maximum": 100
              },{
                "type": "array",
                "items": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 100
                },
                "minItems": 2,
                "maxItems": 2,
                "uniqueItems": true
              }]
            }
          }
        },
        "soil": {
          "description": "The taxon's ecological soil",
          "type": "object",
          "required": [ "acidity", "moisture", "texture", "nutrients", "salinity", "organicMaterial" ],
          "properties": {
            "acidity": {
              "description": "The taxon's soil's acidity need",
              "oneOf": [{
                "type": "integer",
                "minimum": 0,
                "maximum": 100
              },{
                "type": "array",
                "items": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 100
                },
                "minItems": 2,
                "maxItems": 2,
                "uniqueItems": true
              }]
            },
            "moisture": {
              "description": "The taxon's soil's moisture need",
              "oneOf": [{
                "type": "integer",
                "minimum": 0,
                "maximum": 100
              },{
                "type": "array",
                "items": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 100
                },
                "minItems": 2,
                "maxItems": 2,
                "uniqueItems": true
              }]
            },
            "texture": {
              "description": "The taxon's soil's texture need",
              "oneOf": [{
                "type": "integer",
                "minimum": 0,
                "maximum": 100
              },{
                "type": "array",
                "items": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 100
                },
                "minItems": 2,
                "maxItems": 2,
                "uniqueItems": true
              }]
            },
            "nutrients": {
              "description": "The taxon's soil's nutrients need",
              "oneOf": [{
                "type": "integer",
                "minimum": 0,
                "maximum": 100
              },{
                "type": "array",
                "items": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 100
                },
                "minItems": 2,
                "maxItems": 2,
                "uniqueItems": true
              }]
            },
            "salinity": {
              "description": "The taxon's soil's salinity need",
              "oneOf": [{
                "type": "integer",
                "minimum": 0,
                "maximum": 100
              },{
                "type": "array",
                "items": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 100
                },
                "minItems": 2,
                "maxItems": 2,
                "uniqueItems": true
              }]
            },
            "organicMaterial": {
              "description": "The taxon's soil's organicMaterial need",
              "oneOf": [{
                "type": "integer",
                "minimum": 0,
                "maximum": 100
              },{
                "type": "array",
                "items": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 100
                },
                "minItems": 2,
                "maxItems": 2,
                "uniqueItems": true
              }]
            }
          }
        }
      }
    }
  },
  "if": {
    "properties": { "rank": { "const": "ES" } }
  },
  "then": {
    "properties": {
      "potentials": {
        "properties": {
          "nectar": { "type": "integer" },
          "pollen": { "type": "integer" },
          "honeydew": { "type": "integer" },
          "propolis": { "type": "integer" }
        }
      },
      "ecology":{
        "properties":{
          "climate":{
            "properties":{
              "brightness": { "type": "integer" },
              "moisture": { "type": "integer" },
              "temperature": { "type": "integer" },
              "continentality": { "type": "integer" }
            }
          },
          "soil":{
            "properties":{
              "acidity": { "type": "integer" },
              "moisture": { "type": "integer" },
              "texture": { "type": "integer" },
              "nutrients": { "type": "integer" },
              "salinity": { "type": "integer" },
              "organicMaterial": { "type": "integer" }
            }
          }
        }
      }
    }
  },
  "else": {
    "properties": {
      "potentials": {
        "properties": {
          "nectar": { "type": "array" },
          "pollen": { "type": "array" },
          "honeydew": { "type": "array" },
          "propolis": { "type": "array" }
        }
      },
      "ecology":{
        "properties":{
          "climate":{
            "properties":{
              "brightness": { "type": "array" },
              "moisture": { "type": "array" },
              "temperature": { "type": "array" },
              "continentality": { "type": "array" }
            }
          },
          "soil":{
            "properties":{
              "acidity": { "type": "array" },
              "moisture": { "type": "array" },
              "texture": { "type": "array" },
              "nutrients": { "type": "array" },
              "salinity": { "type": "array" },
              "organicMaterial": { "type": "array" }
            }
          }
        }
      }
    }
  }
}
