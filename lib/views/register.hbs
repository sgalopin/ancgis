<div class="ancgis-appmessage">
  {{> app-message}}
</div>

<div id="ancgis-register-menu-shadow"></div>
<div id="ancgis-register-menu">
  <h1>Enregistrement</h1>
  <form role="form" action="/register" method="post" id="register-form">
    <div class="form-group row">
      <label for="username" class="col-sm-4 col-form-label">Utilisateur</label>
      <div class="col-sm-8">
        <input class="form-control" type="text" id="username" name="username" placeholder="mdupont" {{#if username}}value="{{username}}"{{/if}} autofocus=true>
      </div>
    </div>
    <div class="form-group row">
      <label for="email" class="col-sm-4 col-form-label">Email</label>
      <div class="col-sm-8">
        <input class="form-control" type="email" id="email" name="email" placeholder="mdupont@gmail.com" {{#if email}}value="{{email}}"{{/if}}>
      </div>
    </div>
    <div class="form-group row">
      <label for="profil" class="col-sm-4 col-form-label">Profil</label>
      <div class="col-sm-8">
        <select class="form-control" id="profil" name="profil">
          <option value="" disabled hidden {{#unless profil}} selected {{/unless}}>Sélectionner</option>
          <option value="Agriculteur" {{#ifEqual profil "Agriculteur"}} selected {{/ifEqual}}>Agriculteur</option>
          <option value="Apiculteur" {{#ifEqual profil "Apiculteur"}} selected {{/ifEqual}}>Apiculteur</option>
          <option value="Collectivité" {{#ifEqual profil "Collectivité"}} selected {{/ifEqual}}>Collectivité</option>
          <option value="Entomologiste" {{#ifEqual profil "Entomologiste"}} selected {{/ifEqual}}>Entomologiste</option>
          <option value="Semencier" {{#ifEqual profil "Semencier"}} selected {{/ifEqual}}>Semencier</option>
        </select>
      </div>
    </div>
    <div class="form-group row">
      <label for="password" class="col-sm-4 col-form-label">Mot de passe</label>
      <div class="col-sm-8">
        <input class="form-control" type="password" id="password" name="password" placeholder="********">
      </div>
    </div>
    <div class="form-group text-center" style="margin-top:40px;">
        <a href="/" class="btn">Retour</a>
        <button type="submit" class="btn btn-primary">S'enregistrer</button>
    </div>
  </form>
</div>
