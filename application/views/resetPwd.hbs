<div class="ancgis-appmessage">
  {{> app-message}}
</div>

<div id="ancgis-resetpwd-menu-shadow"></div>
<div id="ancgis-resetpwd-menu">
  <h1>Modification de votre mot de passe</h1>
  <form role="form" method="post">
    <div class="form-group row">
      <label for="password" class="col-sm-7 col-form-label">Nouveau mot de passe</label>
      <div class="col-sm-5">
        <input class="form-control" type="password" id="password" name="password" placeholder="********" autofocus=true>
      </div>
    </div>
    <div class="form-group row">
      <label for="confirmation" class="col-sm-7 col-form-label">Confirmation du mot de passe</label>
      <div class="col-sm-5">
        <input class="form-control" type="password" id="confirmation" name="confirmation" placeholder="********">
      </div>
    </div>
    <div class="form-group text-center" style="margin-top:30px;">
        <a href="/login" class="btn">Retour</a>
        <button type="submit" class="btn btn-primary">Modifier</button>
    </div>
  </form>
</div>