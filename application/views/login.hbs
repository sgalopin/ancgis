{{#if error}}
<div class="alert alert-danger">
  {{error}}
</div>
{{/if}}

<div id="ancgis-index-body">
  <div id="ancgis-index-menu-shadow"></div>
  <div id="ancgis-index-menu">
    <h1>Authentification</h1>
    <form role='form' action="/login" method="post">
      <div class="form-group">
        <input class="form-control" type='text' name="username" placeholder='Utilisateur'>
        <input class="form-control" type='password' name="password" placeholder='Mot de passe'>
      </div>
      <div class="form-btbar btn-group">
        <a href="/" class="btn btn-default">Retour</a>
        <button class="btn btn-default" type='submit'>S'authentifier</button>
      </div>
    </form>
  </div>
</div>