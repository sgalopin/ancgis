<div class="ancgis-appmessage">
  {{> app-message}}
</div>

<div id="ancgis-login-menu-shadow"></div>
<div id="ancgis-login-menu">
  <h1>Authentification</h1>
  <form role='form' action="/login" method="post">
    <div class="form-group">
      <input class="form-control" type='text' name="username" placeholder='Utilisateur' {{#if username}}value="{{username}}"{{/if}} autofocus=true>
    </div>
    <div class="form-group">
      <input class="form-control" type='password' name="password" placeholder='Mot de passe'>
      <div class="text-right col-form-label-sm">
        <a href="/requirePwdReset">Mot de passe oubli√©</a>
      </div>
    </div>
    <div class="form-group text-center" style="margin-top:30px;">
        <a href="/" class="btn">Retour</a>
        <button type="submit" class="btn btn-primary">S'authentifier</button>
    </div>
  </form>
</div>